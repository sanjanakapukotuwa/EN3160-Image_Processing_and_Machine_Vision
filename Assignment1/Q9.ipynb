import cv2 as cv
import numpy as np
import matplotlib.pyplot as plt


image = cv.cvtColor(cv.imread('flower.jpeg'),cv.COLOR_BGR2RGB)
mask = np.zeros(image.shape[:2], dtype="uint8")
rect = (40, 150, 800, 700)
fgModel = np.zeros((1, 65), dtype="float")
bgModel = np.zeros((1, 65), dtype="float")
(mask, bgModel, fgModel) = cv.grabCut(image, mask, rect, bgModel,fgModel,8 ,mode=cv.GC_INIT_WITH_RECT)
outputMask_b = np.where((mask == cv.GC_FGD) | (mask == cv.GC_PR_FGD),0, 1)
# scale the mask from the range [0, 1] to [0, 255]
outputMask_b = (outputMask_b * 255).astype("uint8")
# apply a bitwise AND to the image using our mask generated by
# GrabCut to generate our final output image
background = cv.bitwise_and(image, image, mask=outputMask_b)
outputMask_f = np.where((mask == cv.GC_BGD) | (mask == cv.GC_PR_BGD),0, 1)
outputMask_f = (outputMask_f * 255).astype("uint8")
foreground = cv.bitwise_and(image, image, mask=outputMask_f)
fig = plt.figure(figsize=(16,12))

ax1 = fig.add_subplot(141)
ax2 = fig.add_subplot(142)
ax3 = fig.add_subplot(143)
ax4 = fig.add_subplot(144)


ax1.imshow(image)
ax2.imshow(cv.cvtColor(outputMask,cv.COLOR_BGR2RGB))
ax3.imshow(background)
ax4.imshow(foreground)

ax1.title.set_text('Original image')
ax2.title.set_text('Grabcut mask')
ax3.title.set_text('Background')
ax4.title.set_text('Foreground')
plt.show()

enhanced = np.clip(np.add(foreground, cv.GaussianBlur(background,(9,9),4)),0,255)

fig = plt.figure(figsize=(10,8))

ax1 = fig.add_subplot(121)
ax2 = fig.add_subplot(122)


ax1.imshow(image)
ax2.imshow(enhanced)

ax1.title.set_text('Original image')
ax2.title.set_text('Enhanced image')
plt.show()
